---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header';
import Footer from '../components/layout/Footer';
import Hero from '../components/home/Hero';
import DepartmentCard from '../components/ui/DepartmentCard';
import DoctorCard from '../components/ui/DoctorCard';
import { 
  Activity, Award, Users, Bed, 
  ArrowRight, Phone 
} from "lucide-react";

const departments = [
  { name: "Kardiyoloji", iconName: "HeartPulse" },
  { name: "Nöroloji", iconName: "Brain" },
  { name: "Çocuk Sağlığı", iconName: "Baby" },
  { name: "Genel Cerrahi", iconName: "Stethoscope" },
  { name: "Göz Hastalıkları", iconName: "Eye" },
  { name: "Ortopedi", iconName: "Activity" },
  { name: "Dahiliye", iconName: "Thermometer" },
  { name: "Acil Tıp", iconName: "Cross" },
].map(dept => ({
  ...dept,
  slug: dept.name.toLowerCase()
    .replace(/ /g, "-")
    .replace(/ı/g, "i")
    .replace(/ğ/g, "g")
    .replace(/ü/g, "u")
    .replace(/ş/g, "s")
    .replace(/ö/g, "o")
    .replace(/ç/g, "c")
}));

const doctors = [
  { name: "Prof. Dr. Ayşe Yılmaz", specialty: "Kardiyoloji Uzmanı", image: "/hero-doctor-2.png" },
  { name: "Op. Dr. Mehmet Demir", specialty: "Genel Cerrahi", image: "/hero-doctor-2.png" },
  { name: "Doç. Dr. Zeynep Kaya", specialty: "Nöroloji", image: "/hero-doctor-2.png" },
  { name: "Uzm. Dr. Ali Çelik", specialty: "Çocuk Sağlığı", image: "/hero-doctor-2.png" },
];

const title = "İzmir Özel Tedavi | Sağlığınız İçin En İyisi";
---

<BaseLayout title={title}>
  <Header client:load />
  
  <main>
    <Hero client:load />

    {/* Medical Units Section */}
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <span class="text-action font-bold tracking-widest uppercase text-xs">Tıbbi Birimlerimiz</span>
          <h2 class="text-4xl md:text-5xl font-bold text-primary mt-3 font-heading uppercase tracking-tight">Uzmanlık Alanlarımız</h2>
          <div class="w-24 h-1.5 bg-action mx-auto mt-6 rounded-full"></div>
          <p class="text-gray-500 mt-6 max-w-2xl mx-auto text-lg">
            Hastanemiz, en son teknoloji ile donatılmış birimlerinde, alanında uzman hekim kadrosuyla hizmet vermektedir.
          </p>
        </div>

        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
          {departments.map((dept) => {
            const Icon = dept.icon;
            return (
              <DepartmentCard 
                client:load
                name={dept.name} 
                iconName={dept.iconName as any} 
                slug={dept.slug}
              />
            );
          })}
        </div>
      </div>
    </section>

    {/* Featured Services */}
    <section class="py-24 bg-slate-50 relative overflow-hidden">
        <div class="container mx-auto px-4">
          <div class="flex flex-col lg:flex-row items-center gap-16">
            <div class="w-full lg:w-1/2 z-10">
              <span class="text-action font-bold tracking-widest uppercase text-xs">İzmir Özel Tedavi Farkı</span>
              <h2 class="text-4xl md:text-5xl font-bold text-primary mt-4 font-heading leading-tight uppercase">
                Modern Teknoloji <br />
                <span class="text-action underline decoration-sky-100 decoration-8 underline-offset-4">Geleceğin Sağlığı</span>
              </h2>
              <p class="text-gray-600 mt-8 text-lg leading-relaxed">
                Hastanemiz, uluslararası kalite standartlarında hizmet sunmakta olup, hasta güvenliği ve memnuniyetini en üst düzeyde tutmaktadır. İleri tanı ve tedavi yöntemlerimiz ile sağlığınız emin ellerde.
              </p>

              <ul class="mt-10 space-y-5">
                <li class="flex items-center gap-5 bg-white p-5 rounded-2xl shadow-sm border border-slate-100 hover:border-action/20 transition-all group">
                    <div class="w-12 h-12 rounded-xl bg-sky-50 flex items-center justify-center text-action group-hover:bg-action group-hover:text-white transition-colors">
                        <Activity class="w-6 h-6" />
                    </div>
                    <span class="font-bold text-primary text-lg">7/24 Kesintisiz Acil Servis & Ambulans</span>
                </li>
                <li class="flex items-center gap-5 bg-white p-5 rounded-2xl shadow-sm border border-slate-100 hover:border-action/20 transition-all group">
                    <div class="w-12 h-12 rounded-xl bg-sky-50 flex items-center justify-center text-action group-hover:bg-action group-hover:text-white transition-colors">
                        <Award class="w-6 h-6" />
                    </div>
                    <span class="font-bold text-primary text-lg">JCI Akreditasyonlu Kalite Güvencesi</span>
                </li>
                <li class="flex items-center gap-5 bg-white p-5 rounded-2xl shadow-sm border border-slate-100 hover:border-action/20 transition-all group">
                    <div class="w-12 h-12 rounded-xl bg-sky-50 flex items-center justify-center text-action group-hover:bg-action group-hover:text-white transition-colors">
                        <Users class="w-6 h-6" />
                    </div>
                    <span class="font-bold text-primary text-lg">Kişiye Özel Hasta Odaklı Bakım</span>
                </li>
              </ul>
            </div>
            <div class="w-full lg:w-1/2 h-[600px] bg-primary rounded-[40px] relative overflow-hidden shadow-2xl">
              <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary-light to-action opacity-95">
                <div class="h-full flex flex-col items-center justify-center text-white text-center p-12 relative z-10">
                  <div class="w-20 h-20 bg-action/20 rounded-full flex items-center justify-center mb-8 animate-pulse">
                    <Bed class="w-10 h-10 text-action" />
                  </div>
                  <h3 class="text-4xl font-bold font-heading mb-6 uppercase tracking-tight">Kapasite & Teknoloji</h3>
                  <div class="grid grid-cols-2 gap-8 w-full max-w-md">
                    <div class="bg-white/10 p-4 rounded-xl backdrop-blur-sm">
                      <div class="text-3xl font-bold text-action">150+</div>
                      <div class="text-xs uppercase tracking-widest font-bold opacity-70">Yatak</div>
                    </div>
                    <div class="bg-white/10 p-4 rounded-xl backdrop-blur-sm">
                      <div class="text-3xl font-bold text-action">8</div>
                      <div class="text-xs uppercase tracking-widest font-bold opacity-70">Ameliyathane</div>
                    </div>
                    <div class="bg-white/10 p-4 rounded-xl backdrop-blur-sm col-span-2">
                      <div class="text-3xl font-bold text-action">30.000 m²</div>
                      <div class="text-xs uppercase tracking-widest font-bold opacity-70">Kapalı Alan</div>
                    </div>
                  </div>
                </div>
                <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]"></div>
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* Doctors Section */}
      <section class="py-24 bg-white">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-end mb-16">
            <div>
              <span class="text-action font-bold tracking-widest uppercase text-xs">Profesyonel Kadromuz</span>
              <h2 class="text-4xl md:text-5xl font-bold text-primary mt-3 font-heading uppercase">Hekimlerimiz</h2>
            </div>
            <a href="#" class="hidden md:flex items-center gap-2 text-action font-bold hover:underline group">
              Tüm Hekimler <ArrowRight class="w-5 h-5 group-hover:translate-x-1 transition-transform" />
            </a>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {doctors.map((doc) => (
              <DoctorCard client:load {...doc} />
            ))}
          </div>

          <div class="text-center mt-12 md:hidden">
            <a href="#" class="w-full bg-white text-action border-2 border-action px-8 py-4 rounded-xl hover:bg-action hover:text-white transition-all font-bold text-center block">
              Tüm Hekimlerimizi Gör
            </a>
          </div>
        </div>
      </section>

      {/* Stats */}
      <section class="py-20 bg-primary text-white border-y border-primary-light">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-12 text-center">
            <div class="group cursor-default">
              <div class="text-5xl md:text-6xl font-bold mb-3 font-heading text-action group-hover:scale-110 transition-transform duration-300">25+</div>
              <div class="text-gray-400 text-sm uppercase tracking-[0.2em] font-bold">Yıllık Tecrübe</div>
            </div>
            <div class="group cursor-default">
              <div class="text-5xl md:text-6xl font-bold mb-3 font-heading text-action group-hover:scale-110 transition-transform duration-300">150+</div>
              <div class="text-gray-400 text-sm uppercase tracking-[0.2em] font-bold">Uzman Hekim</div>
            </div>
            <div class="group cursor-default">
                <div class="text-5xl md:text-6xl font-bold mb-3 font-heading text-action group-hover:scale-110 transition-transform duration-300">300K+</div>
                <div class="text-gray-400 text-sm uppercase tracking-[0.2em] font-bold">Mutlu Hasta</div>
              </div>
              <div class="group cursor-default">
                <div class="text-5xl md:text-6xl font-bold mb-3 font-heading text-action group-hover:scale-110 transition-transform duration-300">7/24</div>
                <div class="text-gray-400 text-sm uppercase tracking-[0.2em] font-bold">Acil Servis</div>
              </div>
          </div>
        </div>
      </section>

      {/* CTA */}
      <section class="py-24 bg-slate-900 text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-action/5 z-0 pointer-events-none"></div>
        <div class="container mx-auto px-4 relative z-10 text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-8 font-heading uppercase tracking-tight">Sağlıklı Gelecek İçin <br /> <span class="text-action">Şimdi Randevu Alın</span></h2>
          <p class="text-gray-400 text-lg max-w-2xl mx-auto mb-12">
            E-Randevu sistemimizi kullanarak dilediğiniz poliklinik ve hekimden saniyeler içinde randevu oluşturabilirsiniz.
          </p>
          <div class="flex flex-col sm:flex-row justify-center items-center gap-6">
            <button class="w-full sm:w-auto bg-action hover:bg-action-hover text-white px-10 py-5 rounded-xl text-xl font-bold transition-all shadow-xl shadow-sky-500/20 transform hover:-translate-y-1">
              Online Randevu Sistemi
            </button>
            <button class="w-full sm:w-auto bg-primary-light border border-slate-700 hover:border-action text-white px-10 py-5 rounded-xl text-xl font-bold transition-all flex items-center justify-center gap-3 group">
              <Phone class="w-6 h-6 text-action group-hover:animate-bounce" /> 444 0 444
            </button>
          </div>
        </div>
      </section>
  </main>

  <Footer />
</BaseLayout>
